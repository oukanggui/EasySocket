<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_full"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <!--title-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <Button
                android:id="@+id/logon_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_orange_stroke"
                android:gravity="center"
                android:text="登  录"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_18" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_edit_stroke"
                android:paddingLeft="8dp"
                android:paddingTop="13dp"
                android:paddingRight="10dp"
                android:paddingBottom="13dp">

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@mipmap/ic_password"
                    android:drawablePadding="5dp"
                    android:hint="请输入六位密码"
                    android:inputType="textPassword"
                    android:maxLength="11"
                    android:paddingLeft="5dp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_text"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:id="@+id/password_delete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/ic_delete_input" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_input_edit_stroke"
                android:paddingLeft="8dp"
                android:paddingTop="13dp"
                android:paddingRight="10dp"
                android:paddingBottom="13dp">

                <EditText
                    android:id="@+id/input_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@mipmap/ic_account"
                    android:drawablePadding="5dp"
                    android:hint="请输入账号/手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="5dp"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_text"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:id="@+id/number_delete"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/ic_delete_input" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/find_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="忘记密码？"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/logon_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="注册新用户"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_16" />
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_default_placeholder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="电子云"
            android:textColor="@color/color_black"
            android:textSize="@dimen/size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="万物互联，一切皆有可能"
            android:textColor="@color/color_text"
            android:textSize="@dimen/size_12" />
    </LinearLayout>
</LinearLayout>
