<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <!--上部分-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:background="@color/colorApp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/color_black"
            android:textSize="@dimen/size_18" />

    </FrameLayout>

    <!--头部-->
    <FrameLayout
        android:id="@+id/mine_user_info"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <!--姓名-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:text="未知用户"
                android:textColor="@color/color_black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/mine_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginTop="8dp"
                android:text="电子云，万物互联"
                android:textColor="@color/color_text"
                android:textSize="@dimen/size_14" />
        </LinearLayout>
        <!--头像显示-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="11dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_more" />

            <com.baymax.base.widget.CircleImageView
                android:id="@+id/mine_iv_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_default_head" />
        </LinearLayout>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/mine_device"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:background="@color/color_white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="11dp"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical"
            android:src="@mipmap/ic_more" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_device" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="我的设备"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="bottom"
            android:background="@color/color_line" />
    </FrameLayout>

    <!--我的设备-->
    <FrameLayout
        android:id="@+id/mine_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:background="@color/color_white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="11dp"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical"
            android:src="@mipmap/ic_more" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_mine_press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="关于电子云"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="bottom"
            android:background="@color/color_line" />
    </FrameLayout>

    <!--关于-->
    <FrameLayout
        android:id="@+id/mine_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:background="@color/color_white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="11dp"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical"
            android:src="@mipmap/ic_more" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="设置"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="bottom"
            android:background="@color/color_line" />
    </FrameLayout>

    <!--我的设置-->
    <FrameLayout
        android:id="@+id/mine_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:background="@color/color_white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="11dp"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical"
            android:src="@mipmap/ic_more" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_exit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="退出"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_gravity="bottom"
            android:background="@color/color_line" />
    </FrameLayout>

    <!--退出-->
    <include layout="@layout/base_divider_layout" />

</LinearLayout>