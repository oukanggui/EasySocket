<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/img_error1" />

    <TextView
        android:id="@+id/error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:text="@string/text_network_retry"
        android:textColor="#5f646e"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/error_refresh_tv"
        android:layout_width="140dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_retry_btn_blue"
        android:gravity="center"
        android:text="@string/text_refresh_again"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>